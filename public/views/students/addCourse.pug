extends base.pug

block content
    .container.mt-5
        .row 
            .col-3 
                .card 
                    img.card-img-top(src="https://th.bing.com/th/id/OIP.i_1f7CqIL7kr4oHugT7QvgAAAA?pid=ImgDet&rs=1", alt="")
                    .card-body 
                        h2.card-title.h5=student.name 
                        h6=student.email 
            .col-9 
                .container
                    .card
                        .card-body 
                            form(action="",method="post")
                                .mb-2 
                                    label(for="") Select Course
                                    select.form-select(name="courseId")
                                        each x in course 
                                            option(value=`${x._id}`)=x.title
                                .mb-2
                                    input.btn.btn-success(type="submit")
