extend base.pug 

block content 
    .row.mb-3
        .col-8 
            h4.mt-1 Manage Course 
        .col-4 
            a.btn.btn-success(href="/admin/insert-course").float-end Create new Course 
    table.table 
        tr 
            th Name
            th Duration
            th Instructor
            th Fee
            th Description
            th category
            th Action
        each val in courses 
            tr 
            td=val.title
            td=`${val.duration} Months`
            td=val.instructor
            td=val.discount_price
                span.text-muted.small=val.price
            td=val.description
            td=val.category_id.cat_title
            td 
                a.btn.btn-danger(href="")
                    i.bi.bi-trash-fill